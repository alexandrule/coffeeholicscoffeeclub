.menu {
  border: 1px solid #000;
  border-radius: 6px;
}

ul.taxons-list {
  list-style: none;
  padding-left: 10px;
}

nav#taxonomies .taxonomy-root, #sidebar_products_search .filter-title, .product-section-title {
  text-align: center;
  color: #fff;
  font-size: 14px;
  font-weight: bold;
  background-image: url("<%= asset_path 'coffee_bg.jpg' %>");
  line-height: 15px;
  border-radius: 5px 5px 0 0;
  padding: 8px 0;
  background-size: 4px;
  border-bottom: 0px;
  margin-bottom: 0px;
}

#subheader {
  -webkit-box-shadow: none;
  -moz-box-shadow: none;
  box-shadow: none;
  background-color: #fff;
  color: white;
  border-top: 0px;
  border-bottom: 0px;
  overflow: hidden;
  padding: 0px;
  height: 252px;
}

#subheader .container {
  position: relative;
  max-width: 960px;
  height: 220px;
  margin: 0 auto;
  padding: 0;
}

.subheader-wrapper {
  background-image: url("<%= asset_path 'header.jpg' %>");
  height: 251px;
}

.container .columns {
  float: left;
  display: inline;
  margin-left: 0px;
  margin-right: 10px;
}
