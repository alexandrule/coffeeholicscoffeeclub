body {
  border-top: 0;
  background-color: #fff;
}

.menu {
  border: 1px solid #000;
  border-radius: 6px;
}

ul.taxons-list {
  list-style: none;
  padding-left: 10px;
  color: #533923;
}

nav#taxonomies .taxonomy-root, #sidebar_products_search .filter-title, .product-section-title {
  text-align: center;
  color: #fff;
  font-size: 14px;
  font-weight: bold;
  background-image: url("<%= asset_path 'coffee_bg.jpg' %>");
  line-height: 15px;
  border-radius: 5px 5px 0 0;
  padding: 8px 0;
  background-size: 4px;
  border-bottom: 0px;
  margin-bottom: 0px;
}

a {
  color: #533923;
}

nav#top-nav-bar ul li a {
  font-size: 10px;
}

ul#main-nav-bar li a {
  font-size: 10px;
}

nav#taxonomies .taxons-list li a {
  color: #533923;
}

#subheader {
  -webkit-box-shadow: none;
  -moz-box-shadow: none;
  box-shadow: none;
  background-color: #fff;
  color: white;
  border-top: 0px;
  border-bottom: 0px;
  overflow: hidden;
  padding: 0px;
  height: 252px;
}

#subheader .container {
  position: relative;
  max-width: 960px;
  height: 220px;
  margin: 0 auto;
  padding: 0;
}

.subheader-wrapper {
  background-image: url("<%= asset_path 'header.jpg' %>");
  height: 251px;
}

.container .columns {
  float: left;
  display: inline;
  margin-left: 0px;
  margin-right: 10px;
}

footer#footer {
  -webkit-box-shadow: none;
  -moz-box-shadow: none;
  box-shadow: inset none;
  background-color: #CC9900;
  margin-top: 30px;
  border-top: none;
  padding-top: 30px;
  font-size: 14px;
  line-height: 24px;
}

.links a {
  padding-right: 20px;
  font-size: 12px;
}

.copy p {
  font-size: 12px;
}
